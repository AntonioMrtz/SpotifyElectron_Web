---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Navbar from "../components/Navbar.astro";
import MainContent from "../components/MainContent.astro";
---

<Layout title="Welcome to Spotify Electron">
    <div style="height: 100svh; overflow-y: hidden;">
        <Navbar />

        <header>
            <div class="d-flex justify-content-center">
                <div class="d-flex flex-column justify-content-center">
                    <div class="d-flex align-items-center">
                        <h1>
                            Welcome to <span
                                class="text-gradient"
                                style="white-space: nowrap;"
                                >Spotify Electron</span
                            >
                        </h1>
                    </div>
                    <div
                        class="d-flex align-items-center justify-content-center"
                    >
                        <a href="#prueba">
                            <button class="my-btn"
                                ><p style="margin: 0 !important;">
                                    Comenzar
                                </p></button
                            >
                        </a>
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <img class="img-fluid" src="addSongLaptop.png" alt="" />
                </div>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center" style="height: 100%">
                <div class="container-fluid d-flex justify-content-center">
                    <h2>Electron, React and Python</h2>
                </div>

                <div class="container-fluid d-flex justify-content-center">
                    <h3>Made by Antonio Martínez Fernández</h3>
                </div>
            </div>
        </header>
    </div>

    <MainContent>
    </MainContent>
</Layout>

<style>
    header {
        margin: auto !important;
        max-width: 80rem !important;
        color: white !important;
        font-size: 20px !important;
        line-height: 1.6 !important;
        margin-bottom: 6rem !important;
        margin-top: 3rem !important;
        display: flex;
        flex-direction: column;
        height: 80%;
    }
    .astro-a {
        position: absolute;
        top: -32px;
        left: 50%;
        transform: translatex(-50%);
        width: 220px;
        height: auto;
        z-index: -1;
    }
    h1 {
        font-size: 5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 3rem !important;
        margin-top: 1rem;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }
    .instructions {
        margin-bottom: 2rem;
        border: 1px solid rgba(var(--accent-light), 25%);
        background: linear-gradient(
            rgba(var(--accent-dark), 66%),
            rgba(var(--accent-dark), 33%)
        );
        padding: 1.5rem;
        border-radius: 8px;
    }
    .instructions code {
        font-size: 0.8em;
        font-weight: bold;
        background: rgba(var(--accent-light), 12%);
        color: rgb(var(--accent-light));
        border-radius: 4px;
        padding: 0.3em 0.4em;
    }
    .instructions strong {
        color: rgb(var(--accent-light));
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 2rem;
        padding: 0;
    }

    .my-btn {
        border: none;
        background-color: var(--app-logo-color-darker);
        border-radius: 8px;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 2.5rem;
        padding-right: 2.5rem;
        border-radius: 9999px;
        font-weight: 600;
        color: white;
    }

    .my-btn:hover {
        filter: brightness(0.75);
    }
</style>

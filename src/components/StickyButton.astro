<a href="#" id="sticky-button">
  <svg
    height="35px"
    viewBox="0 0 20 20"
    width="35px"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M4.16732 12.5L10.0007 6.66667L15.834 12.5"
      id="my-svg-path"
      stroke="rgb(154, 217, 234)"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"></path>
  </svg>
</a>

<style>
  a {
    opacity: 0;
    position: fixed;
    bottom: 25px; /* Adjust the distance from the bottom as needed */
    right: 25px; /* Adjust the distance from the right as needed */
    color: #fff;
    padding: 5px;
    border: none;
    border-radius: 5px;
    border: 1px solid var(--app-logo-color-darker);
  }

  a:hover {
    border: 1px solid var(--app-logo-color);
  }

  // eslint-disable-next-line astro/no-unused-css-selector
  .scroll {
    visibility: visible !important;
    z-index: 1000;
    opacity: 0.7;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<script>
  const el = document.getElementById("home");
  const sticky_1 = document.getElementById("sticky-button");
  const observer = new IntersectionObserver((entries) => {
    if (!sticky_1) return;
    if (entries[0].isIntersecting) {
      sticky_1.classList.remove("scroll");
    } else {
      // el is not visible
      sticky_1.classList.add("scroll");
    }
  });

  if (el) {
    observer.observe(el); // Asynchronous call
  }
</script>

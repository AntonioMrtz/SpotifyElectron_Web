<style>
    main {
        color: white !important;
        font-size: 20px !important;
        line-height: 1.6 !important;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    main .section-wrapper:nth-child(odd) {
        background-color: var(--background-secondary);
    }
    h2 {
        font-weight: 600;
        font-size: 4rem;
        margin-bottom: 8rem;
    }
    h2::first-letter {
        color: var(--app-logo-color);
    }
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        margin: auto !important;
        max-width: 80rem !important;
        padding-top: 2rem;
    }

    .theapp-section {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        margin-bottom: 8rem;
        padding: 0 1rem 0 1rem;
    }

    .theapp-section img {
        width: 40svw;
        border-radius: 8px;
    }
    .theapp-section-header {
        display: flex;
        flex-direction: column;
    }

    .section-left img {
        margin-right: 3rem;
        filter: drop-shadow(-20px 15px 10px var(--secondary-color));
    }

    .section-right img {
        margin-left: 3rem;
        filter: drop-shadow(20px 15px 10px var(--secondary-color));
    }

    @media (max-width: 989px) {
        .theapp-section {
            flex-direction: column;
            padding: 0 5% 0 5%;
        }
        .theapp-section img {
            margin: 2rem 0 0 0 !important;
            width: 70svw;
            filter: drop-shadow(0px 0px 10px var(--secondary-color));
        }

        .section-left .theapp-section-header {
            order: 1;
        }
        .section-left img {
            order: 2;
        }
    }
</style>

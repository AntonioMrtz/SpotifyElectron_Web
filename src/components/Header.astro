---
import laptopHome from "../../public/laptopHome.webp?url";
import laptopHomePhone from "../../public/laptopHomePhone.webp?url";
import reactIco from "../../public/icons/react.png?url";
import tsIco from "../../public/icons/typescript.png?url";
import electronIco from "../../public/icons/electronjs.png?url";
import mongoIco from "../../public/icons/mongodb.png?url";
import cssIco from "../../public/icons/css.png?url";
import fastApiIco from "../../public/icons/fastapi.png?url";
import boostrapIco from "../../public/icons/boostrap.png?url";
import miuIco from "../../public/icons/materialui.png?url";
import gaIco from "../../public/icons/github_actions.png?url";
import pyIco from "../../public/icons/python.png?url";
---

<header>
    <div class="d-flex justify-content-center mt-3 h-100">
        <div class="d-flex flex-column justify-content-center">
            <div
                class="d-flex align-items-center flex-column"
                style="margin-bottom: 3rem !important; margin-top: 1rem;"
            >
                <h1>
                    Welcome to <span
                        class="text-gradient"
                        style="white-space: nowrap;">Spotify Electron</span
                    >
                </h1>
                <h4 style="color:#adaaaa">Made by Antonio Mart√≠nez</h4>
            </div>
            <div
                class="d-flex align-items-center justify-content-center btn-container"
                style="gap:10px"
            >
                <a href="#goals">
                    <button class="my-btn"
                        ><p style="margin: 0 !important;">
                            Get started
                        </p></button
                    >
                </a>
                <a href="https://github.com/AntonioMrtz/SpotifyElectron">
                    <button class="my-btn btn-secondary"
                        ><p style="margin: 0 !important;">Repository</p></button
                    >
                </a>
            </div>
        </div>
        <div
            class="d-flex justify-content-center align-items-center header-img-container"
        >
            <img class="img-fluid" src={laptopHome} alt="" />
        </div>
    </div>

    <div
        class="d-flex justify-content-center align-items-center m-4 header-image-container-phone"
    >
        <img class="img-fluid" src={laptopHomePhone} alt="" />
    </div>

    <div
        class="d-flex flex-column justify-content-center align-items-center tech-wrapper"
    >
        <div
            class="d-flex flex-wrap justify-content-center"
            style="padding: 1%;border-bottom: 1px solid var(--app-logo-color)"
        >
            <img class="tech-ico" src={reactIco} alt="react icon" />
            <img class="tech-ico" src={tsIco} alt="typescript icon" />
            <img class="tech-ico" src={electronIco} alt=" icon" />
            <img class="tech-ico" src={mongoIco} alt=" icon" />
            <img class="tech-ico" src={cssIco} alt=" icon" />
            <img class="tech-ico" src={pyIco} alt=" icon" />
            <img class="tech-ico" src={fastApiIco} alt=" iconicon" />
            <img class="tech-ico" src={boostrapIco} alt=" icon" />
            <img class="tech-ico" src={miuIco} alt=" icon" />
            <img class="tech-ico" src={gaIco} alt="" />
        </div>
    </div>
</header>

<style>
    header {
        margin: auto !important;
        max-width: 80rem !important;
        color: white !important;
        font-size: 20px !important;
        line-height: 1.6 !important;
        margin-bottom: 6rem !important;
        margin-top: 3rem !important;
        display: flex;
        flex-direction: column;
        height: 80%;
    }

    .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

    h1 {
        font-size: 5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
    }

    .my-btn {
        border: none;
        background-color: var(--app-logo-color-darker);
        border-radius: 8px;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 2.5rem;
        padding-right: 2.5rem;
        border-radius: 9999px;
        font-weight: 600;
        color: white;
    }

    .my-btn:hover {
        filter: brightness(0.75);
    }

    .btn-secondary {
        background-color: var(--background-secondary);
        border: 1px solid var(--app-logo-color-darker);
    }

    .header-image-container-phone {
        display: none !important;
    }

    .tech-ico {
        width: 32px !important;
        margin: 0 10px 0 10px !important;
    }

    .tech-ico:hover {
        transition: transform 0.1s; /* Add a transition on the transform property */
        transform: scale(1.2);
    }

    .tech-wrapper {
        height: 100%;
        flex-direction: row !important;
        margin: 5%;
    }

    @media (max-width: 989px) {
        h1 {
            font-size: 2.8rem !important;
        }

        header {
            margin-top: 0 !important;
        }

        .header-img-container {
            display: none !important;
        }

        .header-image-container-phone {
            display: block !important;
        }
        .tech-wrapper {
            display: none !important;
        }
    }

    @media (max-width: 400px) {
        .btn-container {
            flex-direction: column !important;
        }
    }
</style>

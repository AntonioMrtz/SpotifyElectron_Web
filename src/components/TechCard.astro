---
const { icon } = Astro.props;
const { title } = Astro.props;
const { text } = Astro.props;
const { link } = Astro.props;
---

<a class="tech-card" href={link}>
    <div class="img-wrapper">
        <img src={icon} alt=`${title} icon` />
    </div>

    <div class="header-wrapper">
        <div class="main-text">
            {title}
        </div>
        <div class="secondary-text">
            {text}
        </div>
    </div>
</a>

<style>
    .tech-card {
        display: flex !important;
        flex-direction: column;
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid var(--spacer) !important;
        background-color: var(--dark-filler) !important;
        text-align: left;
    }

    .tech-card:hover {
        background-color: var(--spacer);
        box-shadow: rgb(38, 57, 77) 0px 10px 30px -10px;
    }

    .tech-card:hover .main-text {
        color: var(--app-logo-color);
    }

    .main-text {
        font-size: 2rem;
        font-weight: 600;
        color: white;
    }

    .secondary-text {
        color: var(--subheader-text);
    }

    .img-wrapper img {
        width: 48px;
        height: 48px;
    }
</style>

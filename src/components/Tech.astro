---
import TechCard from "./TechCard.astro";

import reactIco from "../../public/icons/react.png?url";
import tsIco from "../../public/icons/typescript.png?url";
import electronIco from "../../public/icons/electronjs.png?url";
import mongoIco from "../../public/icons/mongodb.png?url";
import cssIco from "../../public/icons/css.png?url";
import pyIco from "../../public/icons/python.png?url";
import fastApiIco from "../../public/icons/fastapi.png?url";
import boostrapIco from "../../public/icons/boostrap.png?url";
import miuIco from "../../public/icons/materialui.png?url";
import gaIco from "../../public/icons/github_actions.png?url";

const techCardData = [
    {
        icon: reactIco,
        title: "ReactJs",
        text: "The perfect choice for develop large, scalable and reusable interfaces. When multiple people is colaborating in the same interface the modularization of components is a must",
    },
    {
        icon: tsIco,
        title: "TypeScript",
        text: "Preventing runtime errors, improving code quality and facilitating the development experience has being the main reason for using this superset of JavaScript",
    },
    {
        icon: electronIco,
        title: "ElectronJs",
        text: "The framework for developing cross-platform was the perfect choice for this project. Develop once and run everywhere",
    },
    {
        icon: mongoIco,
        title: "MongoDB",
        text: "Fast non relational database. Used mainly for constant-changing schemas, this works perfectly with the incremental develop of the app",
    },
    {
        icon: cssIco,
        title: "CSS",
        text: "The backbone of the app's interfaces. Fast and reliable it allows for full control and responsive behaviour",
    },
    {
        icon: pyIco,
        title: "Python",
        text: "Used in combination with Fast API to serve the API that is being consumed by the frontend application and for comunicating with the database for persistency",
    },
    {
        icon: fastApiIco,
        title: "Fast API",
        text: "Scalable and high performance framework used to create the API. It also offers a full documented Swagger page with the various endpoints",
    },
    {
        icon: boostrapIco,
        title: "Boostrap",
        text: "Frontend toolkit for fast development and responsive interfaces",
    },
    /* {
        icon: miuIco,
        title: "Material UI",
        text: "",
    }, */
    {
        icon: gaIco,
        title: "Github Actions",
        text: "Integrated CI/CD tool used for running tests and validating the codebase with the linter. Syntax of new branches is also being checked",
    },
];
---

<div class="grid">
    {
        techCardData.map((tech) => {
            return (
                <TechCard
                    icon={tech.icon}
                    title={tech.title}
                    text={tech.text}
                />
            );
        })
    }
</div>

<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(20vw, 1fr));
        gap: 20px;
        padding: 20px;

        margin-bottom: 8rem;
    }

    @media (max-width: 897px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 560px) {
        .grid {
            grid-template-columns: 1fr;
        }
    }
</style>
